<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.



    -->
    <style name="theme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowTitleBackgroundStyle">@null</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Activity</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
    <style name="MyTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.Switch">

         <item name="android:textSize">24dp</item>

         <item name="android:textColor">#000</item>

    </style>

    <style name="Theme_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="listViewTheme_dataitem">
        <item name="android:scrollbarSize">2.0dip</item>
        <item name="android:scrollbarThumbVertical">@drawable/transport</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:listSelector">@drawable/transport</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:divider">@color/white</item>
        <item name="android:dividerHeight">-1.0dip</item>
    </style>

</resources>