<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_bottom_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/home_bottom_bg"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        android:src="@drawable/hx_logo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bottom_partingline" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/huaxin_name"
            android:textColor="@color/white"
            android:textSize="@dimen/home_bottom_huaxin_info" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/huaxin_phone"
            android:textColor="@color/white"
            android:textSize="@dimen/home_bottom_huaxin_info" />
    </LinearLayout>

</LinearLayout>
