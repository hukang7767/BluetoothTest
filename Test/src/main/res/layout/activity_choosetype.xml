<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/guidance_bg"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="86" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="106" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/guidance_buttonbg"
            android:gravity="center" >

            <Button
                android:id="@+id/guidance_first_botton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/guidance_first_botton"
                android:text="@string/maindetection"
                android:textColor="@color/white"
                android:textSize="@dimen/guidance_button_text" />

            <Button
                android:id="@+id/guidance_second_botton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/guidance_first_botton"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/guidance_second_botton"
                android:text="@string/assistdetection"
                android:textColor="@color/white"
                android:textSize="@dimen/guidance_button_text" />

            <LinearLayout
                android:id="@+id/guidance_choose_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/guidance_second_botton"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/guidance_choose_bg"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/guidance_choose_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/guidance_choose_focus" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="@string/remenberchoose"
                    android:textColor="@color/white"
                    android:textSize="@dimen/guidance_choose_text" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>